@model AjaxCRUD_MVC.Models.Transaction

@{
    ViewData["Title"] = "Create";
    Layout = null;
}

<h2 class="mb-3">
    <i class="fa-solid fa-plus text-success"></i>
    Create Transaction
</h2>
<hr />

<div class="row justify-content-center">
    <div class="col-md-12">
        <div class="card shadow-sm">
            <div class="card-body">

                <form asp-action="Create" onsubmit="return jQueryAjaxPost(this)">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="row">
                        <!-- LEFT COLUMN -->
                        <div class="col-md-6">

                            <div class="mb-3">
                                <label asp-for="AccountNumber" class="form-label"></label>
                                <input asp-for="AccountNumber" class="form-control" />
                                <span asp-validation-for="AccountNumber" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="BeneficiaryName" class="form-label"></label>
                                <input asp-for="BeneficiaryName" class="form-control" />
                                <span asp-validation-for="BeneficiaryName" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="BankName" class="form-label"></label>
                                <input asp-for="BankName" class="form-control" />
                                <span asp-validation-for="BankName" class="text-danger"></span>
                            </div>

                        </div>

                        <!-- RIGHT COLUMN -->
                        <div class="col-md-6">

                            <div class="mb-3">
                                <label asp-for="SwiftCode" class="form-label"></label>
                                <input asp-for="SwiftCode" class="form-control" />
                                <span asp-validation-for="SwiftCode" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Amount" class="form-label"></label>
                                <input asp-for="Amount" class="form-control" />
                                <span asp-validation-for="Amount" class="text-danger"></span>
                            </div>

                        </div>
                    </div>

                    <!-- BUTTONS -->
                    <div class="d-flex gap-2 mt-3">
                        <button type="submit" class="btn btn-success">
                            <i class="fa-solid fa-plus"></i> Submit
                        </button>

                        <a href="javascript:void(0);"
                           class="btn btn-secondary"
                           onclick="BackToListAjax('@Url.Action("Index", "Transaction")')">
                            <i class="fa-solid fa-arrow-left"></i> Back to List
                        </a>
                    </div>

                </form>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}