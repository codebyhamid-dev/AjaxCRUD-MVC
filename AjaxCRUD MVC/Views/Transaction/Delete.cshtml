@model AjaxCRUD_MVC.Models.Transaction

@{
    ViewData["Title"] = "Delete";
}

<h2 class="mb-3 text-danger">
    <i class="fa-solid fa-triangle-exclamation"></i>
    Delete Transaction
</h2>
<hr />

<div class="row justify-content-center">
    <div class="col-md-12">
        <div class="card shadow-sm border-danger">
            <div class="card-body">

                <p class="text-danger fw-semibold">
                    Are you sure you want to delete this transaction?
                </p>

                <div class="row">

                    <!-- LEFT COLUMN -->
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Account Number</label>
                            <div class="form-control bg-light">@Model.AccountNumber</div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Beneficiary Name</label>
                            <div class="form-control bg-light">@Model.BeneficiaryName</div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Bank Name</label>
                            <div class="form-control bg-light">@Model.BankName</div>
                        </div>
                    </div>

                    <!-- RIGHT COLUMN -->
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Swift Code</label>
                            <div class="form-control bg-light">@Model.SwiftCode</div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Amount</label>
                            <div class="form-control bg-light">@Model.Amount</div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Date</label>
                            <div class="form-control bg-light">@Model.Date</div>
                        </div>
                    </div>

                </div>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />

                    <div class="d-flex gap-2 mt-3">
                        <button type="submit" class="btn btn-danger">
                            <i class="fa-solid fa-trash"></i> Delete
                        </button>

                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fa-solid fa-arrow-left"></i> Back to List
                        </a>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>