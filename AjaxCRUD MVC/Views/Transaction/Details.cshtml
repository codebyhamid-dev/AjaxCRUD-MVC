@model AjaxCRUD_MVC.Models.Transaction

@{
    ViewData["Title"] = "Details";
}

<h2 class="mb-3">
    <i class="fa-solid fa-circle-info text-info"></i>
    Transaction Details
</h2>
<hr />

<div class="row justify-content-center">
    <div class="col-md-12">
        <div class="card shadow-sm">
            <div class="card-body">

                <div class="row">
                    <!-- LEFT COLUMN -->
                    <div class="col-md-6 mb-3">
                        <strong>Account Number</strong>
                        <div class="form-control bg-light">@Model.AccountNumber</div>
                    </div>

                    <div class="col-md-6 mb-3">
                        <strong>Beneficiary Name</strong>
                        <div class="form-control bg-light">@Model.BeneficiaryName</div>
                    </div>

                    <div class="col-md-6 mb-3">
                        <strong>Bank Name</strong>
                        <div class="form-control bg-light">@Model.BankName</div>
                    </div>

                    <div class="col-md-6 mb-3">
                        <strong>Swift Code</strong>
                        <div class="form-control bg-light">@Model.SwiftCode</div>
                    </div>

                    <div class="col-md-6 mb-3">
                        <strong>Amount</strong>
                        <div class="form-control bg-light">@Model.Amount</div>
                    </div>

                    <div class="col-md-6 mb-3">
                        <strong>Date</strong>
                        <div class="form-control bg-light">@Model.Date</div>
                    </div>
                </div>


                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fa-solid fa-arrow-left"></i> Back to List
                </a>


            </div>
        </div>
    </div>
</div>